<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFakeStore.Views.AcercaPage"
             Title="Acercade"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="programador.jpg"
                   Aspect="AspectFill"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"
                   Grid.RowSpan="3"/>

            <!-- Label Section -->
            <StackLayout Grid.Row="0" VerticalOptions="Start" Padding="20">
                <Label Text="Emiliano Sebastian Puntang Sierra"
                       TextColor="#3b82f6"
                       FontSize="30"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10"/>
            </StackLayout>

            <!-- ImageButtons Section -->
            <StackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                <Label Text="Contacto:"
                       TextColor="White"
                       FontSize="30"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Margin="0,380,0,30"/>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Margin="0,0,0,10">
                    <ImageButton Source="tel1.jpg"
                                 BackgroundColor="Black"
                                 WidthRequest="60"
                                 HeightRequest="60"
                                 CornerRadius="20"/>
                    <ImageButton Source="mail111.jpg"
                                 BackgroundColor="Black"
                                 WidthRequest="60"
                                 HeightRequest="60"
                                 CornerRadius="20"/>
                </HorizontalStackLayout>
            </StackLayout>

            <!-- Button Section -->
            <StackLayout Grid.Row="2" HorizontalOptions="Center" VerticalOptions="End" Padding="10">
                <Button Text="Volver"
                        BackgroundColor="#6a0572"
                        TextColor="White"
                        CornerRadius="20"
                        Margin="0,0,0,10"
                        Clicked="BackBtn_Clicked"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>